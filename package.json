{
  "name": "dark-mode-extension",
  "version": "2.0.0",
  "description": "Dark mode extension for Chrome, Firefox and Edge",
  "main": "background.js",
  "scripts": {
    "test": "jest",
    "build:chrome": "webpack --config webpack.chrome.js",
    "build:firefox": "webpack --config webpack.firefox.js",
    "build:chrome:prod": "webpack --config webpack.chrome.js --env production",
    "build:firefox:prod": "webpack --config webpack.firefox.js --env production",
    "lint:firefox": "pnpm  build:firefox && web-ext lint -s dist/firefox",
    "build:firefox:prod:zip": "pnpm  build:firefox:prod && web-ext build -o -s dist/firefox -a artifacts -n dark-mode-extension.zip",
    "format": "prettier . --write",
    "doc": "typedoc"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Thomas-den-Oude/dark-mode-extension.git"
  },
  "keywords": [
    "darkmode"
  ],
  "author": "Thomas den Oude",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Thomas-den-Oude/dark-mode-extension/issues"
  },
  "homepage": "https://github.com/Thomas-den-Oude/dark-mode-extension#readme",
  "devDependencies": {
    "@types/jest": "29.5.14",
    "@types/webextension-polyfill": "^0.12.4",
    "copy-webpack-plugin": "13.0.1",
    "css-loader": "7.1.2",
    "jest": "30.2.0",
    "jest-environment-jsdom": "30.2.0",
    "mini-css-extract-plugin": "2.9.4",
    "prettier": "3.7.4",
    "sass": "1.97.1",
    "sass-loader": "16.0.6",
    "style-loader": "3.3.4",
    "ts-jest": "29.4.6",
    "ts-loader": "9.5.4",
    "ts-node": "10.9.2",
    "typedoc": "0.28.15",
    "typescript": "5.9.3",
    "web-ext": "9.2.0",
    "webextension-polyfill": "0.12.0",
    "webpack": "5.104.1",
    "webpack-cli": "5.1.4",
    "webpack-merge": "6.0.1"
  },
  "packageManager": "pnpm@10.26.2+sha512.0e308ff2005fc7410366f154f625f6631ab2b16b1d2e70238444dd6ae9d630a8482d92a451144debc492416896ed16f7b114a86ec68b8404b2443869e68ffda6"
