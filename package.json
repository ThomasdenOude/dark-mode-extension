{
  "name": "dark-mode-extension",
  "version": "2.0.0",
  "description": "Dark mode extension for Chrome, Firefox and Edge",
  "main": "background.js",
  "scripts": {
    "test": "jest",
    "build:chrome": "webpack --config webpack.chrome.js",
    "build:firefox": "webpack --config webpack.firefox.js",
    "build:chrome:prod": "webpack --config webpack.chrome.js --env production",
    "build:firefox:prod": "webpack --config webpack.firefox.js --env production",
    "lint:firefox": "npm run build:firefox && web-ext lint -s dist/firefox",
    "build:firefox:prod:zip": "npm run build:firefox:prod && web-ext build -o -s dist/firefox -a artifacts -n dark-mode-extension.zip",
    "format": "prettier . --write",
    "doc": "typedoc"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Thomas-den-Oude/dark-mode-extension.git"
  },
  "keywords": [
    "darkmode"
  ],
  "author": "Thomas den Oude",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Thomas-den-Oude/dark-mode-extension/issues"
  },
  "homepage": "https://github.com/Thomas-den-Oude/dark-mode-extension#readme",
  "devDependencies": {
    "@types/chrome": "^0.0.269",
    "@types/jest": "^29.5.12",
    "@types/webextension-polyfill": "^0.12.4",
    "copy-webpack-plugin": "^12.0.2",
    "css-loader": "^7.1.2",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "mini-css-extract-plugin": "^2.9.0",
    "prettier": "3.3.3",
    "sass": "^1.77.8",
    "sass-loader": "^16.0.0",
    "style-loader": "^4.0.0",
    "ts-jest": "^29.2.4",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "typedoc": "^0.26.5",
    "typescript": "^5.5.4",
    "web-ext": "^9.2.0",
    "webextension-polyfill": "^0.12.0",
    "webpack": "^5.93.0",
    "webpack-cli": "^5.1.4",
    "webpack-merge": "^6.0.1"
  }
}
